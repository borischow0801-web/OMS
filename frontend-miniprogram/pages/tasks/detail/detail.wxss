/* pages/tasks/detail/detail.wxss */
.container {
  padding: 20rpx;
}

.task-detail {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.task-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-item {
  font-size: 28rpx;
  color: #666;
}

.task-description {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.attachments-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.attachments-list {
  margin-top: 20rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.attachment-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.attachment-size {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx;
}

.download-btn {
  font-size: 24rpx;
}

.upload-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.upload-btn {
  width: 100%;
}

